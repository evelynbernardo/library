<%= form_for @item do |f| %>
  <% if @item.errors.any? %>
    <div class='errors'>
      <h2>Uh oh, errors!</h2>
      <% @item.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class='field'>
    <%= f.label :item_type, 'What type of Item is this?' %>
    <%= f.collection_select :item_type_id, ItemType.all, :id, :name %>
  </div>
<br>
  <div class='field'>
    <%= f.label :title, 'Hello' %>
    <%= f.text_field :title %>
  </div>
<br>
  <div class='field'>
    <%= f.label :completed_on %>
    <%= f.text_area :completed_on %>
  </div>
<br>

  <div class='field'>
    <%= f.submit 'Save' %>
  </div>
<% end %>


